# PostgreSQL Database Configuration
# IMPORTANT: Change these passwords in production!
POSTGRES_PASSWORD=change_this_secure_password
POSTGRES_DB=luaaidiary
POSTGRES_USER=luaaidiary
POSTGRES_HOST=db
POSTGRES_PORT=5432

# Database Pool Configuration
DB_POOL_SIZE=100
DB_POOL_TIMEOUT=60000
DB_CONNECT_TIMEOUT=3000
DB_READ_TIMEOUT=10000
DB_SEND_TIMEOUT=10000

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379

# Lapis Configuration
LAPIS_ENVIRONMENT=development

# Encryption Configuration
# IMPORTANT: Generate a secure 32-byte key for production!
# You can generate one with: openssl rand -hex 32
ENCRYPTION_KEY=change_this_to_a_secure_32_byte_key_in_production

# Gemini API Configuration (optional)
GEMINI_API_KEY=your_gemini_api_key_here
